<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Practica2"] · Práctica 2</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Práctica 2</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMain">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="navMain" class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="Vendedores" asp-action="Create">Registro de Vendedores</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Vehiculos" asp-action="Create">Registro de Vehículos</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Vehiculos" asp-action="Index">Consulta de Vehículos</a></li>
                </ul>
                <span class="navbar-text text-white">Bienvenido a Programación Avanzada · Práctica #2</span>
            </div>
        </div>
    </nav>

    <main class="container py-4">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
